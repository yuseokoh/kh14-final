<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gameImage">
	<!-- 게임 이미지 등록 -->
	<insert id="add">
		insert into game_image(attachment, game)
		values(#{attachment}, #{game}")
	</insert>

	<!-- 게임별 이미지 목록 -->
	<select id="listByGame" resultType="gameImageDto">
		select * from game_image where game = #{gameNo}
	</select>
	
	<!-- 게임 이미지 삭제 -->
	<delete id="remove">
		delete game_image
		where attachment = #{attachmentNo} and game = #{gameNo}
	</delete>
	
</mapper>